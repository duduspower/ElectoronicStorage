<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="add_fuse" author="dduda">
        <createTable tableName="fuse">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="unique_id" type="varchar(36)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="type" type="varchar(12)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="multiplier" type="varchar(12)"/>
        </createTable>
        <createSequence sequenceName="fuse_seq"/>
    </changeSet>
</databaseChangeLog>